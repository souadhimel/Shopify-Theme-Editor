<style>

  .my_liquid {
    background-color: {{section.settings.bg_color}};
    color:{{section.settings.body_text}};
    justify-content: center;
    text-align: center;
    padding: 20px;
    font-size:{{ section.settings.font_size }}px;
}

  
</style>

{% if section.settings.show_announcement %}
<div class="my_liquid">

  {{ section.settings.a_text}}

</div>
  {% endif %}


{% schema %}
  {
    "name": "Acb",
    "settings": [
                {
                  "type": "checkbox",
                  "id": "show_announcement",
                  "label": "Show announcement",
                  "default": true
                },
                {
                  "type": "text",
                  "id": "a_text",
                  "label": "Heading",
                  "default": "Please enter a text"
                },
                  {
              "type": "range",
              "id": "font_size",
              "min": 12,
              "max": 44,
              "step": 1,
              "unit": "px",
              "label": "Font size",
              "default": 16
            },
                {
              "type": "color",
              "id": "body_text",
              "label": "Color",
              "default": "#000000"
            },
                {
              "type": "color",
              "id": "bg_color",
              "label": "Background Color",
              "default": "white"
            }





      
    ]
  }
{% endschema %}

